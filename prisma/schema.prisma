// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPERADMIN
  ADMIN
  EDITOR
  GALLERY_MANAGER
  USER
  NEWS_ADMIN
  EVENT_ADMIN
  POST_ADMIN
}

enum AgeGroup {
  UNDER_18
  AGE_18_25
  AGE_26_35
  AGE_36_50
  AGE_51_PLUS
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts         Post[]
  events        Event[]
  news          News[]
  galleries     Gallery[]
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String
  excerpt     String?
  coverImage  String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  time        String?
  location    String?
  coverImage  String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
}

model News {
  id          String   @id @default(cuid())
  title       String
  content     String
  excerpt     String?
  coverImage  String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
}

model FirstTimer {
  id                    String    @id @default(cuid())
  fullName              String
  phoneNumber           String
  email                 String?
  ageGroup              AgeGroup?
  isFirstTime           Boolean   @default(true)
  attendingDuration     String?
  servicesAttended      String? // JSON string of service names
  departmentsInterest   String? // JSON string of department names
  needsCounseling       Boolean   @default(false)
  prayerRequest         String?
  updatePreferences     String? // JSON string: WhatsApp, Email, SMS, All
  serviceFeedback       String?
  suggestions           String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model Gallery {
  id          String         @id @default(cuid())
  title       String
  description String?
  eventDate   DateTime
  published   Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  authorId    String
  author      User           @relation(fields: [authorId], references: [id])
  images      GalleryImage[]
}

model GalleryImage {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  galleryId String
  gallery   Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
